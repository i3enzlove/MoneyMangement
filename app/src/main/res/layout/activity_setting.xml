<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82cbdc"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textSize="30dp"
        android:textColor="#d2773d"
        android:layout_marginTop="50dp"
        android:id="@+id/textshow"
        android:nextFocusDown="@+id/text2"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กำหนดยอดรายจ่าย"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="70dp"
        android:id="@+id/text1"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/setmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="จำนวนเงิน"
        android:textSize="25dp"
        android:inputType="numberDecimal"
        android:maxLength="7"
        android:layout_gravity="center_horizontal"
        android:nextFocusDown="@+id/text1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="บาท"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:id="@+id/text2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ตกลง"
            android:id="@+id/button"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:onClick="onClicksetPay"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ยกเลิก"
            android:id="@+id/button2"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            android:onClick="onClickCancelSet"/>

    </LinearLayout>
</LinearLayout>